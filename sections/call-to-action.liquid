<!-- Call To Action -->
<div class="tm-section call-to-action-area tm-padding-section" data-bgimage="{{section.settings.background_image | img_url: 'master'}}"
data-overlay="8">
<div class="container">
    <div class="tm-cta">
        {% for block in section.blocks %}
            {% case block.type %}
                {% when 'header' %}
                    <div class="tm-cta-content">
                        <{{block.settings.heading_size}} style="color:{{block.settings.heading_color}}">{{block.settings.heading_text}}</{{block.settings.heading_size}}>
                    </div>      
                {% when 'button' %}
                    <div class="tm-cta-button">
                        <a href="{{block.settings.button_link}}" class="tm-button tm-button-white" style="background: {{block.settings.button_color}}">{{block.settings.button_text}}</a>
                    </div>    
            {% endcase %}
        {% endfor %}
    </div>
</div>
</div>
<!--// Call To Action -->

{% schema %}
    {
        "name": "Call To Action",
        "settings": [
            {
                "type": "image_picker",
                "id": "background_image",
                "label": "Background Image"
            }
        ],
        "blocks": [
            {
                "type": "header",
                "name": "Header",
                "settings": [
                    {
                        "type": "text",
                        "id": "heading_text",
                        "label": "Heading Text",
                        "placeholder": "Put a heading here"
                    },
                    {
                        "type": "select",
                        "id": "heading_size",
                        "label": "Heading Size",
                        "options": [
                            {
                                "value": "h2",
                                "label": "Medium"
                            },
                            {
                                "value": "h3",
                                "label": "Small"
                            },
                            {
                                "value": "h4",
                                "label": "Very Small"
                            }
                        ],
                        "default": "h2"
                    },
                    {
                        "type": "color",
                        "id": "heading_color",
                        "label": "Heading Font Color"
                    }
                ]
            },
            {
                "type": "button",
                "name": "Button",
                "settings": [
                    {
                        "type": "text",
                        "id": "button_text",
                        "label": "Button Text",
                        "default": "Book an Appoinment",
                        "placeholder": "Put label here for button"
                    },
                    {
                        "type": "color",
                        "id": "button_color",
                        "label": "Button Color"
                    },
                    {
                        "type": "url",
                        "id": "button_link",
                        "label": "Button Link",
                        "default": "/"
                    }
                ]
            }
        ],
        "presets" : [
            {
                "name": "Call To Action",
                "blocks": [
                    {
                        "type": "header"
                    }
                ]
            }
        ]
    }
{% endschema %}
