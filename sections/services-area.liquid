<!-- Services Area -->
<div class="tm-section services-area tm-padding-section bg-white">
    <span class="bg-shape-left"><img src="{{section.settings.background_image | img_url:'master'}}" alt="background shape" loading="lazy" width height></span>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-10 col-12">
                <div class="tm-section-title text-center">
                    {% if section.settings.enable_heading == true %}
                        <{{section.settings.heading_size}} style="color:{{section.settings.heading_color}}">{{section.settings.heading_text}}</{{section.settings.heading_size}}>    
                    {% endif %}
                    {% if section.settings.enable_paragraph == true %}
                        <p style="color:{{section.settings.paragraph_text_color}}; font-size: {{section.settings.paragraph_text_size}}px">
                        {{section.settings.paragraph_text}}</p>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-30-reverse">
            {% for block in section.blocks %}
                <!-- Single Service -->
            <div class="col-lg-4 col-md-6 col-12 mt-30">
                <div class="tm-service text-center wow fadeInUp">
                    <div class="tm-service-inner">
                        <span class="tm-service-icon">
                            {{ block.settings.image | img_url: 'medium' |  img_tag}}
                        </span>
                        <span class="tm-service-backicon">
                            {{ block.settings.image | img_url: 'large' |  img_tag}}
                        </span>
                        {% if block.settings.enable_heading ==  true %}
                            <{{ block.settings.heading_size }} style="color:{{ block.settings.heading_color }}"><a href="{{block.settings.readmore_url}}">{{block.settings.heading_text}}</a></{{block.settings.heading_size}}>    
                        {% endif %}
                        {% if block.settings.enable_paragraph == true %}
                            <p style="font-size:{{block.settings.paragraph_text_size}}px; color:{{block.settings.paragraph_text_color}}">{{block.settings.paragraph_text}}</p>
                        {% endif %}
                        <a href="{{block.settings.readmore_url}}" class="tm-readmore">Read more</a>
                    </div>
                </div>
            </div>
            <!--// Single Service -->
            {% endfor %}
            

        </div>
    </div>
</div>
<!--// Services Area -->

{% schema %}
    {
        "name": "Services Area",
        "settings": [
            {
                "type": "image_picker",
                "id": "background_image",
                "label": "Background Image"
            },
            {
