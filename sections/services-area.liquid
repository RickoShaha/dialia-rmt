            },
            {
                "type": "text",
                "id": "heading_text",
                "label": "Heading Text",
                "default": "Our Services"
            },
            {
                "type": "select",
                "id": "heading_size",
                "label": "Heading Size",
                "options": [
                    {
                        "value": "h1",
                        "label": "Big"
                    },
                    {
                        "value": "h2",
                        "label": "Medium"
                    },
                    {
                        "value": "h3",
                        "label": "Small"
                    }
                ],
                "default": "h2"
            },
            {
                "type": "color",
                "id": "heading_color",
                "label": "Heading Font Color"
            },
            {
                "type": "header",
                "content": "Paragraph"
            },
            {
                "type": "checkbox",
                "id": "enable_paragraph",
                "label": "Add Paragraph",
                "default": true
            },
            {
                "type": "richtext",
                "id": "paragraph_text",
                "label": "Paragraph Text",
                "default": "<p>Lorem ipsum dolor sit amet, in quodsi vulputate pro. Ius illum vocent mediocritatem an cule dicta iriure at phaedrum. </p>"
            },
            {
                "type": "range",
                "id": "paragraph_text_size",
                "min": 10,
                "max": 25,
                "step": 1,
                "unit": "px",
                "label": "Paragraph Font Size",
                "default": 14
            },
            {
                "type": "color",
                "id": "paragraph_text_color",
                "label": "Paragraph Font Color"
            }
        ],
        "blocks": [
            {
                "type" : "service",
                "name": "Service",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "header",
                        "content": "Header"
                    },
                    {
                        "type": "checkbox",
                        "id": "enable_heading",
                        "label": "Add Heading",
                        "default": true
                    },
                    {
                        "type": "text",
                        "id": "heading_text",
                        "label": "Heading Text"
                    },
                    {
                        "type": "select",
                        "id": "heading_size",
                        "label": "Heading Size",
                        "options": [
                            {
                                "value": "h3",
                                "label": "Medium"
                            },
                            {
                                "value": "h4",
                                "label": "Small"
                            },
                            {
                                "value": "h5",
                                "label": "Very Small"
                            }
                        ],
                        "default": "h5"
                    },
                    {
                        "type": "color",
                        "id": "heading_color",
                        "label": "Heading Font Color"
                    },
                    {
                        "type": "header",
                        "content": "Paragraph"
                    },
                    {
                        "type": "checkbox",
                        "id": "enable_paragraph",
                        "label": "Add Paragraph",
                        "default": true
                    },
                    {
                        "type": "richtext",
                        "id": "paragraph_text",
                        "label": "Paragraph Text",
                        "default": "<p></p>"
                    },
                    {
                        "type": "range",
                        "id": "paragraph_text_size",
                        "min": 10,
                        "max": 25,
                        "step": 1,
                        "unit": "px",
                        "label": "Paragraph Font Size",
                        "default": 14
                    },
                    {
                        "type": "color",
                        "id": "paragraph_text_color",
                        "label": "Paragraph Font Color"
                    },
                    {
                        "type": "url",
                        "id": "readmore_url",
                        "label": "Redirect Link to Read More ",
                        "info": "This link Redirects to page when clicked on Read More"
                    }
                ]
            }
        ],
        "presets": [
            {
              "name": "Services Area",
              "blocks": [
                {
                    "type": "service"
                }
              ]
            }
          ]
    }
{% endschema %}
